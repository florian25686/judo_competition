{# Highlighting the current menuitem, by its starting url Parameter #}

{# Get URL into a variable #}
{% set currentPath = path(app.request.attributes.get('_route')) %}

{# Define every variable empty #}
{% set active_home = '' %}
{% set active_fighter = '' %}
{% set active_groups = '' %}

{# Set only the selected URL active #}
{% if currentPath == '/' %}
  {% set active_home = 'active' %}
{% elseif currentPath starts with '/fighter' %}
  {% set active_fighter = 'active' %}
{% elseif currentPath starts with '/competition_groups' %}
  {% set active_groups = 'active' %}
{% endif %}

{% block navigation %}
<div class="container">
      <!-- Static navbar -->
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Judo Competition Manager</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="{{ active_home }}"><a href="/"><span class="glyphicon glyphicon-home" aria-hidden="true"></a></li>
              <li class="{{ active_fighter }} dropdown">
                  <a href="/fighter" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-user">&nbsp;menu.fighter <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="/fighter">menu.overview.fighter</a></li>
                    <li><a href="/fighter/createFighter">menu.create.fighter</a></li>
                </ul>
            </li>
              <li class="{{ active_groups }} dropdown">
                <a href="/competitionGroups" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-group"></span>menu.groups <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="/competitionGroups">menu.overview.groups</a></li>
                  <li><a href="/competition_groups/generate_groups">menu.create.groups</a></li>

                </ul>
            </li>
            </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>

</div>
    {% endblock %}
