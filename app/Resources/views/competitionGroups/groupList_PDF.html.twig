{% extends 'pdf.html.twig' %}
{# Read the URL, Parameter "print" should add the print class #}

{% block body %}
<div id="container" class="visible-print-inline" style="width: 21cm; height: 29.7cm;">
    {% for key,competitionGroup in competitionGroups %}
        <div class="col-md-10">
            <h2>{% trans %}Group{%endtrans%} {{ key }}</h2>
         </div>

	 <div class="visible-print-inline visible-print">
            <div class="col-md-8">
              <table class="col-md-8 table table-striped">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>{% trans %}Last name{% endtrans %}</th>
                    <th>{% trans %}First name{% endtrans %}</th>
                    <th>{% trans %}Weight {% endtrans %}</th>
                    <th>{% trans %}Gender{% endtrans %}</th>
                    <th>{% trans %}Club {% endtrans %}</th>
                  </tr>
                </thead>
                    <tbody>
                        {% for fighter in competitionGroup %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{fighter.lastName}}</td>
                            <td>{{fighter.firstName}}</td>
                            <td>{{fighter.weight}}</td>
                            <td>{{fighter.gender}}</td>
                            <td>{{fighter.club}}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
              </table>
            </div>
         </div>
         <div class="row">
             <div class="col-md-9">
                  <table class="table table-bordered table-striped visible-print">
                      <thead>
                        <tr>
                            <td>#</td>
                            <td>{% trans %}fighter.weight{% endtrans %}</td>
                            <td>{% trans %}fighter.blue{% endtrans %}</td>
                            <td>{% trans %}result.points{% endtrans %}</td>
                            <td>{% trans %}fighter.winner.name{% endtrans %}</td>
                        </tr>
                      </thead>
                      <tbody>

                            {% for key,competitionGroupsFight in competitionGroupsFights %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ competitionGroupsFight.white.lastName }}, {{ competitionGroupsFight.white.firstName }}</td>
                                    <td>{{ competitionGroupsFight.blue.lastName }}, {{ competitionGroupsFight.blue.firstName }}</td>
                                    <td>&nbsp;</td>
                                    <td></td>
                                </tr>
                            {% endfor %}

                  </tbody>
            </table>
         </div>
     </div>
     <p class="visible-print-block" style="page-break-after:always;">
     </p>
    {% endfor %}

  </div>
{% endblock %}
